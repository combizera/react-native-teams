{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": "./",
    "strict": true,
    "paths": {
      "@assets/*": [
        "./assets/*"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@routes/*": [
        "./routes/*"
      ],
      "@screens/*": [
        "./app/screens/*"
      ],
      "@storage/*": [
        "./storage/*"
      ],
      "@utils/*": [
        "./utils/*"
      ],
      "@/*": [
        "./*"
      ]
    },
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
